---
const {title, textcontent} = Astro.props;
---

<section>
    <h1>{title}</h1>
    <p>{textcontent}</p>
</section>

<style>
    section {
        display: inline-flex;
        flex-direction: column;
        justify-content: flex-start;
        width: var(--Section-width-large);
        height: var(--Section-height-small);
        color: var(--secondary-typeface-color);
        background-color:rgba(28, 30, 35, 0.80) ;
        margin-top: var(--Section-padding-right-small);
        margin-left: var(--Section-left);
        padding-left: var(--Section-left);
        padding-right: var(--Section-padding-right-small);
        padding-bottom: var(--Section-padding-bottom-large);
        padding-top: var(--Section-padding-top);
    }

    p {
        color: var(--lighter-gray-100);
    }

</style>