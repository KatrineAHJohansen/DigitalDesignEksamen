---
const {title, textcontent} = Astro.props;
---

<section>
    <h1>{title}</h1>
    <p>{textcontent}</p>
</section>

<style>
    section {
        display: inline-flex;
        flex-direction: column;
        justify-content: flex-start;
        width: 50rem;
        height: 12rem;
        color: var(--secondary-typeface-color);
        background-color:rgba(28, 30, 35, 0.80) ;
        margin-top: 2rem;
        margin-left: 1rem;
        padding-left: 1rem;
        padding-right: 2rem;
        padding-bottom: 3rem;
        padding-top: 1rem;

    }

</style>