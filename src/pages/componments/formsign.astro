---
const {numbers, textcontent} = Astro.props;
import "./radiobutton.astro";
import Radiobutton from "./radiobutton.astro";
import "./button.astro";
import Button from "./button.astro";
---

<section>
    <h1>{numbers}</h1>
    <p>{textcontent}</p>
    <div>Hej jeg er en lang dims.</div>
    <Radiobutton></Radiobutton>
    <div class="button-flex"><Button></Button></div>
       
</section>

<style>
section {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    background-color: white;
    width: 30rem;
    height: 17rem;
    border-radius: 1rem;
    margin-top: 3rem;
}

h1{
    color: var(--cerise-red-100);
    margin-top: 1rem;
    font-size: 3.4rem;
    font-family: "Campton-ExtraBold";
}

p {
    font-size: 0.9rem;
    font-family: "Rubik-Regular";
}

.button-flex {
    display: flex;
    flex-direction: row;
    gap: 1;
}
</style>
